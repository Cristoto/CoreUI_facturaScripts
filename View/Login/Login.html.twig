{% extends "Master/MicroTemplate.html.twig" %}
{% block fullBody %}
    {% block bodyextra %}<body class="app flex-row align-items-center">{% endblock %}
    {% block body %}
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-8">
                <div class="card-group">
                    <div class="card p-4">
                    <form action="index.php" method="post" class="form">
                        <div class="card-body">
                            <h1>{{ i18n.trans('login') }}</h1>
                            <p class="text-muted">{{ i18n.trans('Sign In to your account') }}</p>
                            <div class="input-group mb-3">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-user"></i>
                                    </span>
                                </div>
                                <input type="text" class="form-control" name="fsNick" placeholder="{{ i18n.trans('user') }}" required autofocus>
                            </div>
                            <div class="input-group mb-4">
                                <div class="input-group-prepend">
                                    <span class="input-group-text">
                                        <i class="icon-lock"></i>
                                    </span>
                                </div>
                                <input type="password" class="form-control" name="fsPassword" placeholder="{{ i18n.trans('password') }}" required>
                            </div>
                            <div class="row">
                                <div class="col-6">
                                    <button type="submit" class="btn btn-primary px-4">{{ i18n.trans("login")}}</button>
                                </div>
                                {# Botón para recuperar la contraseña
                                    <div class="col-6 text-right">
                                        <button type="button" class="btn btn-link px-0">{{ i18n.trans("Forgot password?")}}</button>
                                    </div>
                                #}
                            </div>
                            </div>
                        </div>
                    </form>
                        {#Sección para registrar usuario
                        <div class="card text-white bg-primary py-5 d-md-down-none" style="width:44%">
                            <div class="card-body text-center">
                                <div>
                                    <h2>{{ i18n.trans("Sign up")}}</h2>
                                    <p>Lorem ipsum dolor sit amet, consectetur adipisicing elit, sed do eiusmod tempor incididunt ut labore et dolore magna aliqua.</p>
                                    <button type="button" class="btn btn-primary active mt-3">{{ i18n.trans("Register Now!")}}</button>
                                </div>
                            </div>
                        </div>
                        #}
                    </div>
                    </div>
                </div>
            </div>
    {% endblock %}    
{% endblock %}